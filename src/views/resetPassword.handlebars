<main style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
  <div style="width: 100%; max-width: 500px; padding: 20px;">
    <div style="text-align: center; margin-bottom: 30px;">
      <img src="/LOGO.png" alt="Logo del laboratorio" width="30%" style="margin-bottom: 20px;">
      <h2>Restablecer Contraseña</h2>
    </div>

    <form id="reset-form" style="background: #f5f5f5; padding: 20px; border-radius: 8px;">
      <div style="margin-bottom: 15px;">
        <label for="password" style="display: block; margin-bottom: 5px; font-weight: bold;">Nueva Contraseña</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          required 
          style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; font-size: 14px;"
          placeholder="Ingresa tu nueva contraseña"
        >
      </div>

      <div style="margin-bottom: 20px;">
        <label for="passwordConfirm" style="display: block; margin-bottom: 5px; font-weight: bold;">Confirmar Contraseña</label>
        <input 
          type="password" 
          id="passwordConfirm" 
          name="passwordConfirm" 
          required 
          style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; font-size: 14px;"
          placeholder="Confirma tu nueva contraseña"
        >
      </div>

      <button 
        type="submit" 
        style="width: 100%; padding: 10px; background-color: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 16px; font-weight: bold;"
      >
        Restablecer Contraseña
      </button>
    </form>

    <p style="text-align: center; margin-top: 20px; color: #666; font-size: 14px;">
      Este enlace tiene una validez de 1 hora
    </p>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/resetPassword.js"></script>
